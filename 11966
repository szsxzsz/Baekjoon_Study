import java.io.*;
import java.util.*;


public class Main {

	public static void main(String[] args) throws NumberFormatException, IOException {
		Scanner sc = new Scanner(System.in);
	
		int n = sc.nextInt();
		
		while(n != 1) {
			if(n % 2 == 1) {
				System.out.println(0);
				return;
			}
			n /= 2;
		}
		
		System.out.println(1);
		
		sc.close();
	}

}

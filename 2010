import java.io.IOException;
import java.util.Scanner;


public class Main {

	public static void main(String[] args) throws NumberFormatException, IOException {
		Scanner sc = new Scanner(System.in);
	
		int T = sc.nextInt();
		int sum = 0;
		for(int i=0; i<T; i++) {
			int p = sc.nextInt();
			sum += p;
		}
		System.out.println(sum-T+1);
		
		
	}

}
